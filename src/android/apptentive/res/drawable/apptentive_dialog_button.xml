<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#66999999"/>
            <corners android:radius="@dimen/apptentive_dialog_button_corner_radius"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_focused"/>
            <corners android:radius="@dimen/apptentive_dialog_button_corner_radius"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_hovered"/>
            <corners android:radius="@dimen/apptentive_dialog_button_corner_radius"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_negative_disabled"/>
            <corners android:radius="3dp"/>
            <stroke android:color="@color/apptentive_dialog_button_negative_disabled"
                    android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_default"/>
            <corners android:radius="3dp"/>
            <stroke android:color="@color/apptentive_dialog_button_default"
                    android:width="1dp"/>
        </shape>
    </item>
    <!-- Normal and disabled have no visible background -->
</selector>